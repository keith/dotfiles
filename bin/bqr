#!/bin/bash

set -euo pipefail

readonly name=$1
shift

patterns=$(mktemp)

bazel query "attr(name, '$name', ...)" > "$patterns"

if [[ ! -s $patterns ]]; then
  echo "error: no targets matching '$name'" >&2
  exit 1
fi

if [[ $(wc -l < "$patterns") -ne 1 ]]; then
  echo "error: more than one target matches '$name':"
  echo
  cat "$patterns"
  exit 1
fi

# If the user passes --, pass that and all other args after any bazel args +
# the target name
bazel_args=("$(cat "$patterns")")
for arg in "$@"; do
  if [[ $arg == -- ]]; then
    break
  else
    bazel_args+=("$arg")
    shift
  fi
done

set -x
bazel run "${bazel_args[@]}" "$@"
