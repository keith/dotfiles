#!/bin/bash

set -euo pipefail
set -x

commit_args=()
for arg in "$@"
do
  case "$arg" in
    --squash)
      commit_args+=(-m ignore)
      ;;
    -s|--no-verify)
      commit_args+=("$arg")
      shift
      ;;
    *)
      ;;
  esac
done

if [[ -z "${commit_args:-}" ]]; then
  commit_args=(--)
fi

head_sha=$(git rev-parse HEAD)
git commit "${commit_args[@]}"
git updatepr "$head_sha" "$@"
